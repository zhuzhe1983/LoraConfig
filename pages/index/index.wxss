.container {
  padding: 20px;
}

.header {
  text-align: center;
  margin-bottom: 30px;
}

.title {
  font-size: 24px;
  font-weight: bold;
}

.status-panel {
  background: #f5f5f5;
  border-radius: 10px;
  padding: 15px;
  margin-bottom: 30px;
}

.status-item {
  margin: 10px 0;
}

.action-panel {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.action-button {
  background: #007AFF;
  color: white;
  border-radius: 8px;
}

.disconnect {
  background: #FF3B30;
}